{
  "name": "project-fugu",
  "version": "1.0.0",
  "description": "project-fugu",
  "main": "index.js",
  "scripts": {
    "test": "gulp test",
    "start": "gulp serve",
    "build": "gulp build",
    "analyze": "cd src && cem analyze --litelement",
    "vite:dev": "vite",
    "vite:build": "npm run analyze && vite build",
    "generate": "skeleton-component-generator --cem=./src/custom-elements.json --gen=./dist/generated-components"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucienimmink/project-fugu.git"
  },
  "author": "Lucien Immink",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucienimmink/project-fugu/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@addasoft/skeleton-component-generator": "^1.0.1",
    "@babel/core": "^7.23.2",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.23.2",
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-plugin-transform-html-import-to-string": "2.0.0",
    "clippy-web-component": "^0.0.4",
    "colors": "^1.4.0",
    "core-js": "^3.33.1",
    "fitty": "^2.3.7",
    "glob": "^11.0.0",
    "gulp": "^5.0.0",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-connect": "^5.7.0",
    "gulp-eslint": "^6.0.0",
    "gulp-header": "^2.0.9",
    "gulp-tap": "^2.0.0",
    "gulp-zip": "^5.1.0",
    "highlight.js": "^11.9.0",
    "lit": "^3.1.4",
    "marked": "^4.3.0",
    "node-qunit-puppeteer": "^2.1.2",
    "prettier": "^3.3.3",
    "qunit": "^2.20.0",
    "rollup": "^4.1.5",
    "sass": "^1.69.5",
    "vite": "^5.3.4",
    "yargs": "^17.7.2"
  },
  "overrides": {
    "chokidar": "4.0.3",
    "glob-parent": "6.0.2"
  },
  "browserslist": "> 2%, not dead",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true,
      "requireConfigFile": false
    },
    "globals": {
      "module": false,
      "console": false,
      "unescape": false,
      "define": false,
      "exports": false
    },
    "rules": {
      "curly": 0,
      "eqeqeq": 2,
      "wrap-iife": [
        2,
        "any"
      ],
      "no-use-before-define": [
        2,
        {
          "functions": false
        }
      ],
      "new-cap": 2,
      "no-caller": 2,
      "dot-notation": 0,
      "no-eq-null": 2,
      "no-unused-expressions": 0
    }
  },
  "homepage": "https://github.com/lucienimmink/project-fugu#readme",
  "volta": {
    "node": "22.20.0",
    "npm": "10.9.4"
  }
}
